<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <!--<link rel="stylesheet" href="../../public/resource/bootstrap4/css/bootstrap.min.css">-->
    <link rel="stylesheet" href="/resource/bootstrap4/css/bootstrap.min.css" >

    <title><%= title %></title>
</head>
<body>

<div class="container" style="margin-top: 50px;">
    <form class="form-horizontal">
        <div class="form-group">
            <input type="email" class="form-control" id="email" placeholder="邮箱">
        </div>

        <div class="form-group">
            <input type="text" class="form-control" id="username" placeholder="用户名">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" id="password" placeholder="密码">
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary btn-block" id="commit">提交</button>
        </div>
        <div class="form-group">
            <textarea class="form-control" rows="10" id="show"></textarea>
        </div>
    </form>

</div>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.js"  crossorigin="anonymous"></script>
<script src="/resource/bootstrap4/js/bootstrap.min.js" ></script>

<script>


    $('#commit').on('click',function () {

        let params = {
            email: $('#email').val(),
            username: $('#username').val(),
            password: $('#password').val(),
        };

        $.ajax({
            url: "/api/doRegister",
            method: "post",
            data: params,
            dataType: "json",
            success: function (res) {
                console.log(res);
                let resStr = JSON.stringify(res);

                $('#show').html(resStr);
            },
            error: function (err) {
                console.log(err)
            }
        })
    })
</script>
</body>
</html>